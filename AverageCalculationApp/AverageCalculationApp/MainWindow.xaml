<Window x:Class="AverageCalculationApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Average Calculation" Height="200" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Введите N:" />
            <TextBox x:Name="NTextBox" Margin="0 0 0 10" />
            <TextBlock Text="Введите массив целых чисел (разделенных пробелом):" />
            <TextBox x:Name="NumbersTextBox" Margin="0 0 0 10" />
            <Button Content="Вычислить" Click="CalculateButton_Click" Margin="0 0 0 10" />
            <TextBlock x:Name="ResultTextBlock" FontWeight="Bold" />
        </StackPanel>
    </Grid>
</Window>
